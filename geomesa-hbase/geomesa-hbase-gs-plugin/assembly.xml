<assembly>
  <id>install</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <useProjectArtifact>true</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <useTransitiveFiltering>true</useTransitiveFiltering>
      <scope>runtime</scope>
      <excludes>
        <!-- exclude the jars brought in for our legacy shaded jar -->
        <exclude>org.apache.hbase:hbase-client</exclude>
        <exclude>org.apache.hbase:hbase-server</exclude>
        <exclude>org.apache.hbase:hbase-common</exclude>
        <exclude>org.apache.hbase:hbase-protocol</exclude>
        <exclude>com.google.guava:guava</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
